%h1.text-center
  = t('.title')

%table.table.table-striped
  %thead
    %tr
      %th= t('activerecord.attributes.item.name')
      %th= t('activerecord.attributes.item.kind')
      %th= t('activerecord.attributes.item.price')
      %th= t('actions.title')
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.kind
        %td= item.price
        %td
          = link_to t('buttons.show'), item
          = link_to t('buttons.edit'), edit_item_path(item)

.text-center
  %a.btn.btn-primary{ href:  new_item_path }= t('.buttons.new')
