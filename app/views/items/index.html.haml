%h1 Items
%table
  %thead
    %tr
      %th Name
      %th Price
      %th{ colspan: "3" }
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.price
        %td= link_to t('actions.show'), item
        %td= link_to t('actions.edit'), edit_item_path(item)
        %td= link_to t('actions.destroy'), item, method: :delete, data: { confirm: t('questions.assurance') }
%br/
= link_to 'New Item', new_item_path
