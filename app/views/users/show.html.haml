%h1.text-center.page_headline
  = "#{t('activerecord.models.user.one')}: #{@user.username}"

%div.content
  %table.table.table-striped
    %tr
      %th= t('activerecord.attributes.user.username')
      %td= @user.username
    %tr
      %th= t('activerecord.attributes.user.email')
      %td= @user.email


.col-md-2
  .col-md-6
    = button_to t('actions.edit'), edit_user_path(@user), method: :get, class: 'btn btn-primary'
  .col-md-6
    %div.page_footer
  = button_to t('actions.back'), :back, method: :get, class: 'btn btn-secondary'

