= javascript_include_tag 'pages/menus/index', 'data-turbolinks-track': 'reload'

%h1.text-center
  = t('.title')

%ul.nav.nav-tabs
  - @facade.week_menus.each do |menu|
    %li.nav-item
      %a.nav-link{ href: api_internal_menu_path(menu.id) }= menu.name
.tab-content

.text-center.mt-3
  - if current_user.lunch_admin?
    %a.btn.btn-primary{ href: new_menu_path }= t('.buttons.new')
