%h1 Menus
%table
  %thead
    %tr
      %th Day
      %th{ colspan: "3" }
  %tbody
    - @menus.each do |menu|
      %tr
        %td= menu.created_at.strftime("%A %d %B")
        %td= link_to t('actions.show'), menu
        %td= link_to t('actions.edit'), edit_menu_path(menu)
        %td= link_to t('actions.destroy'), menu, method: :delete, data: { confirm: t('questions.assurance') }
%br/
= link_to 'New Menu', new_menu_path
